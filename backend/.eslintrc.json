{
    "env": {
        "node": true,
        "es2021": true,
        "vitest-globals/env": true
    },
    "extends": ["eslint:recommended"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["vitest-globals"],
    "rules": {
        "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
        "no-console": "off",
        "eqeqeq": ["error", "always"]
    },
    "ignorePatterns": ["node_modules/", "coverage/"]
}
